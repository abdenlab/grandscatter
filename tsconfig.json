{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ES2020",
		"moduleResolution": "bundler",
		"lib": ["DOM", "DOM.Iterable", "ES2020"],
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"strict": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"verbatimModuleSyntax": true
	},
	"include": ["src/**/*.ts"]
}
